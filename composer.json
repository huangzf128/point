{
    "require": {
        "php": "^7.3 || ^8.0",
        "ext-json": "*",
        "ext-pdo": "*",
        "php-di/php-di": "^6.3",
        "selective/basepath": "^2",
        "slim/csrf": "^1.2",
        "slim/psr7": "^1.3",
        "slim/slim": "4.*",
        "slim/twig-view": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "PHPMailer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml",
        "test:coverage": "phpunit --configuration phpunit.xml --coverage-clover build/logs/clover.xml --coverage-html build/coverage"
    }
}
